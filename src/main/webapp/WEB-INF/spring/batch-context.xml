<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="com.smoopay.sts.batch" />

	<batch:job-repository id="jobRepository"
		isolation-level-for-create="DEFAULT" />

	<bean id="jobLauncher"
		class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
		<property name="jobRepository" ref="jobRepository" />
	</bean>

	<bean id="bankRepositoryReader"
		class="org.springframework.batch.item.data.RepositoryItemReader">
		<property name="repository" ref="bankAccountRepository" />
		<property name="methodName" value="findAll" />
		<property name="pageSize" value="10" />
		<property name="sort">
			<map key-type="java.lang.String" value-type="org.springframework.data.domain.Sort.Direction">
				<entry key="id" value="ASC" />
			</map>
		</property>
	</bean>

	<batch:job id="bankJob">
		<batch:step id="bankJob-step1">
			<batch:tasklet transaction-manager="transactionManager"
				start-limit="1">
				<batch:chunk reader="bankRepositoryReader"
					processor-transactional="true" reader-transactional-queue="true"
					processor="bankRepositoryProcessor" writer="bankRepositoryWriter"
					commit-interval="1" />
			</batch:tasklet>
		</batch:step>
	</batch:job>

</beans>