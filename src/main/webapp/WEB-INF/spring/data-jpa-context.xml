<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
							http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa-1.3.xsd
							http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.2.xsd
							http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">


	<jpa:auditing auditor-aware-ref="auditorAware" />
	<jpa:repositories base-package="com.smoopay.sts.repository" />
	<bean id="auditorAware" class="com.smoopay.sts.security.AuditorService" />

	<bean id="hibernateJpaDialect" class="org.springframework.orm.jpa.vendor.HibernateJpaDialect" />

	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="persistenceUnitName" value="default" />
		<property name="packagesToScan" value="com.smoopay.sts.entity" />
		<property name="jpaVendorAdapter" ref="hibernateAdapter" />
		<property name="jpaProperties">
			<value>
				hibernate.cache.use_second_level_cache=true
				hibernate.cache.region.factory_class=org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory
				hibernate.cache.use_query_cache=true
				hibernate.generate_statistics=true
				javax.persistence.sharedCache.mode=ENABLE_SELECTIVE
			</value>
		</property>
	</bean>

	<!-- Move to Atomikos: http://fogbugz.atomikos.com/default.asp?community.6.2843.5 -->
	<bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
		<property name="jpaDialect" ref="hibernateJpaDialect" />
	</bean>

	<!-- Profile: dev -->
	<beans profile="dev">
		<context:property-placeholder
			local-override="true" location="classpath:properties/postgres-dev-jdbc.properties" />

		<bean id="hibernateAdapter"
			class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
			<property name="showSql" value="true" />
			<property name="generateDdl" value="true" />
			<property name="databasePlatform" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="database" value="POSTGRESQL" />
		</bean>

		<bean id="dataSource" class="com.jolbox.bonecp.BoneCPDataSource"
			destroy-method="close">
			<property name="driverClass" value="${postgres_dev_driver_class}" />
			<property name="jdbcUrl" value="${postgres_dev_url}" />
			<property name="username" value="${postgres_dev_username}" />
			<property name="password" value="${postgres_dev_password}" />
			<property name="idleConnectionTestPeriod" value="60" />
			<property name="idleMaxAge" value="240" />
			<property name="maxConnectionsPerPartition" value="30" />
			<property name="minConnectionsPerPartition" value="10" />
			<property name="partitionCount" value="3" />
			<property name="acquireIncrement" value="5" />
			<property name="statementsCacheSize" value="100" />
			<property name="releaseHelperThreads" value="3" />
		</bean>

		<jdbc:initialize-database data-source="dataSource"
			ignore-failures="NONE">
			<jdbc:script location="classpath:sql/quartz/postgres.sql" />
			<jdbc:script location="classpath:sql/batch/postgres.sql" />
		</jdbc:initialize-database>
	</beans>

	<!-- Profile: unit-tests -->
	<beans profile="unit-tests">
		<bean id="hibernateAdapter"
			class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
			<property name="showSql" value="true" />
			<property name="generateDdl" value="true" />
			<property name="databasePlatform" value="org.hibernate.dialect.HSQLDialect" />
			<property name="database" value="HSQL" />
		</bean>

		<jdbc:embedded-database id="dataSource" type="HSQL" />
		<jdbc:initialize-database data-source="dataSource"
			ignore-failures="NONE">
			<jdbc:script location="classpath:sql/quartz/hsqldb.sql"
				separator="/;" />
			<jdbc:script location="classpath:sql/batch/hsqldb.sql"
				separator="/;" />
			<jdbc:script location="classpath:sql/clients_data.sql"
				separator="/;" />
			<jdbc:script location="classpath:sql/clients_drop_data.sql"
				separator="/;" execution="DESTROY" />
			<jdbc:script location="classpath:sql/banks_data.sql"
				separator="/;" />
			<jdbc:script location="classpath:sql/banks_drop_data.sql"
				separator="/;" execution="DESTROY" />
			<jdbc:script location="classpath:sql/merchant_data.sql"
				separator="/;" />
			<jdbc:script location="classpath:sql/merchant_drop_data.sql"
				separator="/;" execution="DESTROY" />
			<jdbc:script location="classpath:sql/bank_registry_data.sql"
				separator="/;" />
			<jdbc:script location="classpath:sql/bank_registry_drop_data.sql"
				separator="/;" execution="DESTROY" />
		</jdbc:initialize-database>
	</beans>

</beans>